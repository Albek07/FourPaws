<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FourPaws" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_50</item>
        <item name="colorPrimaryVariant">@color/teal_50</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BlackCircleProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/error_icon_size</item>
        <item name="android:layout_height">@dimen/error_icon_size</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/black</item>
    </style>

    <style name="SearchCityTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:hint">@string/area</item>
        <item name="hintTextColor">@color/black</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="FilterToggleButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/white_smoke</item>
        <item name="textAllCaps">false</item>
        <item name="iconSize">60dp</item>
        <item name="iconGravity">top</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="BigBottomButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="elevation">8dp</item>
    </style>


</resources>